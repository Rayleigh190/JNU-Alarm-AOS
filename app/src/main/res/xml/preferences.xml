<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="일반">
        <SwitchPreferenceCompat
            app:key="basic"
            app:title="기본 알림"
            android:summary="서비스 관련한 기본 알림 입니다."
            android:enabled="true"
            android:icon="@drawable/setting_ic_round_announcement_24"/>

        <SwitchPreferenceCompat
            app:key="ad"
            app:title="홍보/마케팅"
            android:summary="홍보/마케팅 알림입니다."
            android:icon="@drawable/setting_ic_round_card_giftcard_24"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="대학">
        <SwitchPreferenceCompat
            app:key="academic"
            app:title="학사 알림"
            android:summary="홈페이지 학사 게시판의 새 게시물을 알려드립니다."
            android:icon="@drawable/setting_ic_round_school_24"/>

        <SwitchPreferenceCompat
            app:key="scholarship"
            app:title="장학 알림"
            android:summary="홈페이지 장학 게시판의 새 게시물을 알려드립니다."
            android:icon="@drawable/setting_ic_round_article_24"/>

        <Preference
            android:key="college"
            android:title="단과대 알림"
            android:summary="각 단과대 홈페이지에 새 공지사항이 올라오면 알려드립니다."
            android:icon="@drawable/setting_ic_round_account_balance_24"/>

        <Preference
            android:key="department"
            android:title="학과 알림"
            android:summary="각 학과 홈페이지에 새 공지사항이 올라오면 알려드립니다."
            android:icon="@drawable/setting_ic_round_local_library_24"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="기타">
        <Preference
            android:key="business"
            android:title="사업단 알림"
            android:summary="각 사업단 홈페이지에 새 공지사항이 올라오면 알려드립니다."
            android:icon="@drawable/setting_ic_round_business_24" />

        <Preference
            android:key="question"
            android:title="문의 및 제안"
            android:icon="@drawable/setting_ic_round_phone_in_talk_24"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="개발자 모드">
        <SwitchPreferenceCompat
            app:key="test"
            app:title="테스트 알림"
            android:icon="@drawable/setting_ic_round_science_24"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
